<div class="sidebar-fixed">
    <div class="inner-sidebar">
        {{#if live}}
            <div class="sig_broadcast">
            {{#each live}}
                {{#if (isEquals status 1)}}
                <a href="{{link}}" target="_blank" title="생방송중">
                    <img src="/static/images/btn_broadcast.jpg" alt="방송중" width="215" height="105" />
                </a>
                {{/if}}
            {{/each}}
            </div>
        {{/if}}

        {{#if recom}}
        <h3 class="title">추천방송</h3>
        <ul class="recomList">
            {{#each recom}}
                <li class="nav_list">
                    {{#if (isEquals type 'S') }}
                    <a href="#{{type}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                    {{else if (isEquals type 'G') }}
                    <a href="/channel/{{super_channel}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                    {{/if}}

                    <!-- each로 채널 리스트를 그리기 위해서 정리된 배열을 리턴해주는 헬퍼의 도움을 받아서 처리한다. -->
                    {{#if (isEquals type 'S') }}
                        <div class="sub_nav">
                            <div class="inner_sub">
                                <h4 class="channel_info">
                                    <img src="{{../static}}channel/{{super_channel}}/logo"
                                         width="32"
                                         height="32"
                                         class="img_logo"
                                         alt="{{super_title}}" />
                                    {{super_title}}
                                </h4>
                                <ol class="sub_list_nav clearfix">
                                    {{#each (ExtractSubChannelInfo sub_channel sub_title)}}
                                        <li class="sub_list">
                                            <a href="/channel/{{channel}}" class="sub_link">
                                                <img src="{{../../static}}channel/{{channel}}/thumbnail"
                                                     width="145"
                                                     height="181"
                                                     class="img_thumbnail"
                                                     alt="{{title}}" />
                                                <span class="tit">{{title}}</span>
                                            </a>
                                        </li>
                                    {{/each}}
                                </ol>
                            </div>
                        </div>
                    {{/if}}
                </li>
            {{/each}}
        </ul>
        {{/if}}

        {{#if channels}}
        <h3 class="title">홀클.tv 컨텐츠</h3>
        <ul class="channelList">
            {{#each channels}}
            <li class="nav_list">
                {{#if (isEquals type 'G') }}
                    <a href="/channel/{{super_channel}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                {{else}}
                    <a href="#{{type}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                {{/if}}

                {{! each로 채널 리스트를 그리기 위해서 정리된 배열을 리턴해주는 헬퍼의 도움을 받아서 처리한다. }}
                {{#if (isEquals type 'S') }}
                    <div class="sub_nav">
                        <div class="inner_sub">
                            <h4 class="channel_info">
                                <img src="{{../static}}channel/{{super_channel}}/logo"
                                     width="32"
                                     height="32"
                                     class="img_logo"
                                     alt="{{super_title}}" />
                                {{super_title}}
                            </h4>
                            <ol class="sub_list_nav clearfix">
                            {{#each (ExtractSubChannelInfo sub_channel sub_title)}}
                                <li class="sub_list">
                                    <a href="/channel/{{channel}}" class="sub_link">
                                        <img src="{{../../static}}channel/{{channel}}/thumbnail"
                                             width="145"
                                             height="181"
                                             class="img_thumbnail"
                                             alt="{{title}}" />
                                        <span class="tit">{{title}}</span>
                                    </a>
                                </li>
                            {{/each}}
                            </ol>
                        </div>
                    </div>
                {{/if}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</div>