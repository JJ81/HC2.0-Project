<div class="sidebar-fixed">
    <div class="inner-sidebar">
        <h3>
        {{#if live}}
            {{#each live}}
                {{#if (isEquals status 1)}}
                    <a href="{{link}}" target="_blank">
                        방송중 <small>({{id}})</small>
                    </a>
                {{else}}
                    미방송중
                {{/if}}
            {{/each}}
        {{else}}
            미방송중
        {{/if}}
        </h3>

        <h3 class="title">추천방송</h3>
        <ul class="recomList">
            {{#each recom}}
                <li class="nav_list">
                    <a href="#{{type}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                    <!-- each로 채널 리스트를 그리기 위해서 정리된 배열을 리턴해주는 헬퍼의 도움을 받아서 처리한다. -->
                    {{#if (isEquals type 'S') }}
                        <ol>
                            {{#each (ExtractSubChannelInfo sub_channel sub_title)}}
                                <li>
                                    <a href="/channel/{{channel}}">
                                        <img src="{{../../static}}channel/{{channel}}/logo"
                                             width="32"
                                             height="32"
                                             class="img_logo"
                                             alt="{{title}}" />
                                        {{title}}
                                    </a>
                                </li>
                            {{/each}}
                        </ol>
                    {{/if}}
                </li>
            {{/each}}
        </ul>

        <h3 class="title">홀클.tv 컨텐츠</h3>
        <ul class="channelList">
            {{#each channels}}
            <li class="nav_list">
                {{#if (isEquals type 'G') }}
                    <a href="/channel/{{super_channel}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                {{else}}
                    <a href="#{{type}}" class="linkNav">
                        <img src="{{../static}}channel/{{super_channel}}/logo"
                             width="32"
                             height="32"
                             class="img_logo"
                             alt="{{super_title}}" />
                        {{super_title}}
                    </a>
                {{/if}}

                <!-- each로 채널 리스트를 그리기 위해서 정리된 배열을 리턴해주는 헬퍼의 도움을 받아서 처리한다. -->
                {{#if (isEquals type 'S') }}
                    <ol>
                    {{#each (ExtractSubChannelInfo sub_channel sub_title)}}
                        <li>
                            <a href="/channel/{{channel}}">
                                <img src="{{../../static}}channel/{{channel}}/logo"
                                     width="32"
                                     height="32"
                                     class="img_logo"
                                     alt="{{title}}" />
                                {{title}}
                            </a>
                        </li>
                    {{/each}}
                    </ol>
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>