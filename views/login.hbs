<h2 class="heading-s">로그인</h2>
<div class="login-box">
    <div class="login-box-body">
        <form role="form" id="form-login" method="post" action="/login">

            <div class="form-group has-feedback">
                <input type="text" class="form-control txt_input" name="user_id" id="agent" placeholder="아이디" autofocus autocomplete="off" required />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" class="form-control txt_input" name="password" id="password" placeholder="비밀번호" autocomplete="off" required />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            {{#if msg}}<div class="has-error">{{msg}}</div>{{/if}}

            <button type="submit" class="btn btn-primary btn-block btnLogin">로그인</button>

            <div class="btnArea">
                <a href="/find/id" class="btn btn-link btnLoginArea">아이디 찾기</a>
                <a href="/find/pw" class="btn btn-link btnLoginArea">비밀번호 찾기</a>
                <a href="/signup" class="btnSignUp btnLoginArea pull-right">회원가입</a>
            </div>


        </form>
    </div>
</div>

