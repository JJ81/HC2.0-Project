<div class="login-box">
    <div class="login-box-body">
        <form role="form" id="form-login" method="post" action="/login">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="user_id" id="agent" placeholder="아이디" autofocus autocomplete="off" required />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="password" id="password" placeholder="비밀번호" autocomplete="off" required />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            <div>
                <input type="hidden" name="login_check">
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbok">
                        <label><input type="checkbox" id="remember"> Remember Me</label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-danger btn-block btn-flat" id="btn-agent-login">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!--<a href="#">I forgot my password</a><br />-->
    </div>
    <!-- /.login-box-body -->
</div>