<h2 class="heading-s">이메일 수정</h2>

<div class="modify-email">

    <form action="/private/email/modify" method="post" class="form">
        <legend>이메일 수정 페이지</legend>
        <fieldset>
            <div class="form-group">
                <input type="email" name="email" class="form-control txt_input" placeholder="새로운 이메일 주소를 입력하세요" autocomplete="off" autofocus required value="{{email}}" />
                {{#if msg_email}}<div class="error">{{msg_email}}</div>{{/if}}
            </div>

            <div class="form-group">
                <input type="password" name="password" class="form-control txt_input" autocomplete="off" required placeholder="현재 비멀번호를 입력해주세요." />
                {{#if msg_password}}<div class="error">{{msg_password}}</div>{{/if}}
            </div>

            <input type="hidden" name="_csrf" value="{{csrfToken}}" />

            {{#if error}}<div class="error">{{error}}</div>{{/if}}

            <div class="btnArea clearfix">
                <button type="submit" class="btn btn-default btn-modify-email">수정하기</button>
                <a href="/private" class="btn btn-default btn-private">돌아가기</a>
            </div>

        </fieldset>
    </form>
</div>