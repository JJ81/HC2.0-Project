<h2 class="heading-s">비밀번호 수정</h2>

<div class="private-modify-pw">

    <form action="/private/password/modify" method="post" class="form">
        <legend>비밀번호 수정 페이지</legend>
        <fieldset>
            <div class="form-group">
                <input type="password" name="old_password" class="form-control txt_input" autocomplete="off" required placeholder="현재 비밀번호를 입력해주세요." autofocus />
                {{#if msg_old_password}}<div class="error">{{msg_old_password}}</div>{{/if}}
            </div>
            <div class="form-group">
                <input type="password" name="new_password" class="form-control txt_input" autocomplete="off" required placeholder="새로운 비밀번호를 입력해주세요." />
                {{#if msg_new_password}}<div class="error">{{msg_new_password}}</div>{{/if}}
            </div>
            <div class="form-group">
                <input type="password" name="re_password" class="form-control txt_input" autocomplete="off" required placeholder="새로운 비밀번호를 다시 확인해주세요." />
                {{#if msg_re_password}}<div class="error">{{msg_re_password}}</div>{{/if}}
            </div>

            <input type="hidden" name="_csrf" value="{{csrfToken}}" />

            {{#if error}}<div class="error">{{error}}</div>{{/if}}

            <div class="btnArea clearfix">
                <button type="submit" class="btn btn-primary btn-modify-pw">수정하기</button>
                <a href="/private" class="btn btn-default btn-private">돌아가기</a>
            </div>

        </fieldset>
    </form>
</div>